@model Survey.ViewModels.WelcomeViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<style type="text/css">
    table {
        border-collapse: collapse;
    }

    td, th {
        border: 1px solid black;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        Ready to choose a restaurant ?
    </div>
    @using (Html.BeginForm())
    {
        <input type="submit" value="Create a survey" />
    }
    <ul>
        <li>@Html.ActionLink("Add a restaurant", "CreateRestaurant", "Restaurant")</li>
        <li>@Html.ActionLink("Modify restaurants", "Index", "Restaurant")</li>
    </ul>
</body>
</html>
